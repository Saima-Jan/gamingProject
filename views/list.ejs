<%- include ('partials/header') %>
<h1>This is all of the games we have:</h1>

<div class="row">
  <% for(var i = 0;i < gameslist.length; i++){ %>
  <div class="col-md-4 mb-5">
    <div class="card" style="width: 18rem">
      <img
        class="card-img-top"
        style="height: 200px"
        src="/games/thumbnails/<%= gameslist[i].thumbnailfile %>"
        alt="Card image cap"
      />
      <div class="card-body">
        <h5 class="card-title"><%= gameslist[i].title %></h5>
        <p class="card-text">Game created by <%= gameslist[i].creator %></p>
        <a href="/game/<%=gameslist[i].id%> " class="btn btn-primary">Play Game</a>
        <a href="/game/<%=gameslist[i].id%>/edit " class="btn btn-primary">Edit</a>
        <a href="/game/<%=gameslist[i].id%>/delete " class="btn btn-primary">Delete</a>

      </div>
    </div>
  </div>
  <% } %>
</div>

<%- include ('partials/footer') %>
